@model IEnumerable<JewelShopProject.Models.BrandMst>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }

    h1 {
        color: #2d2d2d;
        font-weight: 600;
        text-align: center;
        margin-bottom: 30px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ccc;
    }

    th {
        background-color: #f7f7f7;
        color: #704214;
        font-weight: bold;
        border-top: 3px solid #D4AF37;
    }

    .btn {
        color: #fff;
        background-color: #D4AF37;
        border-color: #D4AF37;
        padding: 8px 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            background-color: #b38927;
            border-color: #b38927;
        }

    a {
        color: #D4AF37;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #b38927;
        }
</style>

<h1>Brand Information</h1>

<body>

    <p>
        <a asp-action="Create" class="btn">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Brand_Type)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand_Type)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Brand_ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Brand_ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Brand_ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
