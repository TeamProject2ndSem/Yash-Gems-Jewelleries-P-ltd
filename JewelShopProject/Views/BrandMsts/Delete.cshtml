@model JewelShopProject.Models.BrandMst

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5; /* Light gray */
        color: #333;
    }

    h1 {
        color: #2d2d2d; /* Dark gray */
        font-weight: 600;
        text-align: center;
        margin-bottom: 30px;
    }

    h3 {
        color: #2d2d2d; /* Dark gray */
        font-weight: normal;
        text-align: center;
        margin-bottom: 20px;
    }

    .row {
        margin-bottom: 20px;
    }

    dt {
        font-weight: bold;
        color: #2d2d2d; /* Dark gray */
    }

    dd {
        margin-left: 0;
        color: #333; /* Darker gray */
    }

    .btn-danger {
        color: #fff;
        background-color: #D4AF37; /* Gold */
        border-color: #D4AF37; /* Gold */
        padding: 8px 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #b38927; /* Darker Gold */
            border-color: #b38927; /* Darker Gold */
        }

    a {
        color: #D4AF37; /* Gold */
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #b38927; /* Darker Gold */
        }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>BrandMst</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand_Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand_Type)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Brand_ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
