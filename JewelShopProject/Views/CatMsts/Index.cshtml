@model IEnumerable<JewelShopProject.Models.CatMst>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }

    h1 {
        color: #2d2d2d;
        font-weight: 600;
        text-align: center;
        margin-bottom: 30px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ccc;
    }

    th {
        background-color: #f7f7f7;
        color: #704214;
        font-weight: bold;
        border-top: 3px solid #D4AF37;
    }

    a {
        color: #D4AF37;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #b38927;
        }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cat_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cat_Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Cat_ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Cat_ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Cat_ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
