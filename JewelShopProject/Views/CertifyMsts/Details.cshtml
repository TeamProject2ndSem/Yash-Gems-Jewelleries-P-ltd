@model JewelShopProject.Models.CertifyMst

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Certification Details</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa; /* Light gray */
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
        }

        h1 {
            font-size: 28px;
            margin-bottom: 20px;
            color: #007bff; /* Blue */
        }

        h4 {
            font-size: 18px;
            margin-bottom: 20px;
            color: #333;
        }

        hr {
            border-color: #dcdcdc;
            margin-bottom: 20px;
        }

        .details-section dd {
            color: #555;
        }

        .action-links {
            margin-top: 30px;
        }

            .action-links a {
                color: #007bff; /* Blue */
                text-decoration: none;
                margin-right: 15px;
            }

                .action-links a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container">
        <h1>Details</h1>
        <div>
            <h4>CertifyMst</h4>
            <hr />
            <dl class="row details-section">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Certify_Type)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Certify_Type)
                </dd>
            </dl>
        </div>
        <div class="action-links">
            <a asp-action="Edit" asp-route-id="@Model?.Certify_ID">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</body>
</html>
