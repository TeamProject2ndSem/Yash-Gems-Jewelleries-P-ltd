@model IEnumerable<JewelShopProject.Models.ProdMst>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5; /* Light gray */
        color: #333;
    }

    h1 {
        color: #2d2d2d; /* Dark gray */
        font-weight: 600;
        text-align: center;
        margin-bottom: 30px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ccc;
    }

    th {
        background-color: #f7f7f7;
        color: #704214; /* Gold */
        font-weight: bold;
        border-top: 3px solid #D4AF37; /* Gold */
    }

    .btn {
        color: #fff;
        background-color: #D4AF37; /* Gold */
        border-color: #D4AF37; /* Gold */
        padding: 8px 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            background-color: #b38927; /* Darker Gold */
            border-color: #b38927; /* Darker Gold */
        }

    a {
        color: #D4AF37; /* Gold */
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #b38927; /* Darker Gold */
        }
</style>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prod_Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Prod_Type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Prod_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Prod_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Prod_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
